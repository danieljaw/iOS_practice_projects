import UIKit

class ViewController: UIViewController {
 
    var isPreessed = 1
    @IBOutlet var imageView: UIImageView!
    @IBAction func askButtonPressed(_ sender: UIButton) {
        
        let ballArray = [UIImage(imageLiteralResourceName: "magicball1"),
                         UIImage(imageLiteralResourceName: "magicball2"),
                         UIImage(imageLiteralResourceName: "magicball3"),
                         UIImage(imageLiteralResourceName: "magicball4"),
                         UIImage(imageLiteralResourceName: "magicball5")]
        
//        imageView.image = ballArray[Int.random(in: 0...1)]
//        In this case (0...1)if I want to show only one pircure I have an error caused by small amaut of pictures
        
        imageView.image = ballArray[Int.random(in: 0...4)]
    }
    
 
